<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeReferencedProjects>true</IncludeReferencedProjects>
  </PropertyGroup>
  
  <PropertyGroup>
    <Title>Chroma Framework</Title>
    <PackageId>Chroma</PackageId>
    <Version>0.1.0-alpha</Version>
    <Authors>Ciastex</Authors>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/Ciastex/Chroma</RepositoryUrl>
    <PackageTags>gamedev;engine;2d;chroma;framework;sdl;opengl;game</PackageTags>
    <PackageLicenseUrl>https://github.com/Ciastex/Chroma/blob/master/LICENSE.md</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\logo.png" />
    <None Remove="Resources\shader\default.frag" />
    <None Remove="Resources\shader\default.vert" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Chroma.Natives\Chroma.Natives.csproj" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\logo.png" />
    <EmbeddedResource Include="Resources\shader\default.frag" />
    <EmbeddedResource Include="Resources\shader\default.vert" />
  </ItemGroup>
</Project>
